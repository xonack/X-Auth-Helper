{
  "manifest_version": 3,
  "name": "X Auth Helper",
  "version": "1.0",
  "description": "Retrieves X key for logged in user",
  "permissions": ["cookies"],
  "host_permissions": ["*://x.com/*"],
  "incognito": "split",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "pages/popup.html"
  }
}
